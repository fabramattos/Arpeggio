{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Frontend Server",
            "type": "shell",
            "command": "npm.cmd run dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Vite",
                    "endsPattern": "Local:"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}